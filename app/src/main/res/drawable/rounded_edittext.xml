<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Shadow Layer -->
    <item android:bottom="4dp" android:right="4dp">
        <shape android:shape="rectangle">
            <solid android:color="#55000000"/> <!-- Shadow color -->
            <corners android:radius="16dp"/> <!-- Shadow should match the shape corners -->
        </shape>
    </item>

    <!-- Main Shape -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#EEEEEE"/> <!-- Main background color -->
            <corners android:radius="16dp"/> <!-- Same corner radius -->
        </shape>
    </item>

</layer-list>
