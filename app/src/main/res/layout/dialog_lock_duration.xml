<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_background"
    android:padding="10dp"
    android:layout_margin="20dp">

    <TextView
        android:id="@+id/titleLockDuration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set Lock Duration"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Select a future date and time to lock access. The app will remain locked until your chosen date and cannot be unlocked earlier."
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/durationPresetToggleGroup"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/titleLockDuration" />

    <nl.bryanderidder.themedtogglebuttongroup.ThemedToggleButtonGroup
        android:id="@+id/durationPresetToggleGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="16dp"
        app:justifyContent="space_evenly"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/description">

        <nl.bryanderidder.themedtogglebuttongroup.ThemedButton
            android:id="@+id/btn1Day"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            app:toggle_btnCornerRadius="10dp"
            app:toggle_selectedBackgroundColor="@color/black"

            app:toggle_selectedTextColor="@color/white"
            app:toggle_text="1 Day" />

        <nl.bryanderidder.themedtogglebuttongroup.ThemedButton
            android:id="@+id/btn3Days"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            app:toggle_btnCornerRadius="10dp"
            app:toggle_selectedBackgroundColor="@color/black"
            app:toggle_selectedTextColor="@color/white"
            app:toggle_text="3 Days" />

        <nl.bryanderidder.themedtogglebuttongroup.ThemedButton
            android:id="@+id/btn1Week"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            app:toggle_btnCornerRadius="10dp"
            app:toggle_selectedBackgroundColor="@color/black"
            app:toggle_selectedTextColor="@color/white"
            app:toggle_text="1 Week" />

        <nl.bryanderidder.themedtogglebuttongroup.ThemedButton
            android:id="@+id/btn1Month"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            app:toggle_btnCornerRadius="10dp"
            app:toggle_selectedBackgroundColor="@color/black"
            app:toggle_selectedTextColor="@color/white"
            app:toggle_text="1 Month"
            app:toggle_textSize="16dp" />
    </nl.bryanderidder.themedtogglebuttongroup.ThemedToggleButtonGroup>

    <TextView
        android:id="@+id/customEndLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Or select end date:"
        android:textSize="14sp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/durationPresetToggleGroup"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp" />

    <CalendarView
        android:id="@+id/calendarView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:showWeekNumber="false"
        android:focusedMonthDateColor="@color/black"
        android:unfocusedMonthDateColor="@android:color/darker_gray"
        android:dateTextAppearance="@style/CalendarDateText"
        android:selectedWeekBackgroundColor="@color/black"
        android:selectedDateVerticalBar="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/customEndLabel" />

    <TimePicker
        android:id="@+id/timePicker"
        android:layout_width="341dp"
        android:layout_height="134dp"
        android:timePickerMode="spinner"
        app:layout_constraintBottom_toTopOf="@+id/btnConfirm"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/calendarView" />

    <TextView
        android:id="@+id/descriptionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Lock will end on "
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/timePicker"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/calendarView" />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="@drawable/rounded_outline"
        android:text="Cancel"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/timePicker" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnConfirm"
        style="@style/CustomButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="Confirm"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
