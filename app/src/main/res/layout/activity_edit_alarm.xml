<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".alarm.EditAlarm"
    android:layout_margin="20dp">

    <TextView
        android:id="@+id/edittxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Select Alarm"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginTop="50dp"
        tools:ignore="HardcodedText" />



    <LinearLayout
        android:id="@+id/linearAlarm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/edittxt"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/timeCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textSize="16sp"/>

    </LinearLayout>

    <TimePicker
        android:id="@+id/timePicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/linearAlarm"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="40dp"
        android:timePickerMode="spinner"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


        <nl.bryanderidder.themedtogglebuttongroup.ThemedToggleButtonGroup
            android:id="@+id/toggleBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/timePicker"
            app:layout_constraintBottom_toTopOf="@id/editLabel"
            app:justifyContent="space_evenly"
            app:toggle_selectableAmount="7"
            android:layout_margin="25dp"

            >

            <nl.bryanderidder.themedtogglebuttongroup.ThemedButton
                android:id="@+id/btnSun"
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                app:toggle_selectedBackgroundColor="@color/darkgray"
                app:toggle_selectedTextColor="@color/white"
                app:toggle_text="S"
                app:toggle_textSize="10sp"
                />

            <nl.bryanderidder.themedtogglebuttongroup.ThemedButton
                android:id="@+id/btnMon"
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                app:toggle_selectedBackgroundColor="@color/darkgray"
                app:toggle_selectedTextColor="@color/white"
                app:toggle_text="M"
                app:toggle_textSize="10sp"/>

            <nl.bryanderidder.themedtogglebuttongroup.ThemedButton
                android:id="@+id/btnTue"
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                app:toggle_selectedBackgroundColor="@color/darkgray"
                app:toggle_selectedTextColor="@color/white"
                app:toggle_text="T"
                app:toggle_textSize="10sp"/>

            <nl.bryanderidder.themedtogglebuttongroup.ThemedButton
                android:id="@+id/btnWed"
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                app:toggle_selectedBackgroundColor="@color/darkgray"
                app:toggle_selectedTextColor="@color/white"
                app:toggle_text="W"
                app:toggle_textSize="10sp"/>

            <nl.bryanderidder.themedtogglebuttongroup.ThemedButton
                android:id="@+id/btnThu"
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                app:toggle_selectedBackgroundColor="@color/darkgray"
                app:toggle_selectedTextColor="@color/white"
                app:toggle_text="T"
                app:toggle_textSize="10sp"/>


            <nl.bryanderidder.themedtogglebuttongroup.ThemedButton
                android:id="@+id/btnFri"
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                app:toggle_selectedBackgroundColor="@color/darkgray"
                app:toggle_selectedTextColor="@color/white"
                app:toggle_text="F"
                app:toggle_textSize="10sp"/>

            <nl.bryanderidder.themedtogglebuttongroup.ThemedButton
                android:id="@+id/btnSat"
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                app:toggle_selectedBackgroundColor="@color/darkgray"
                app:toggle_selectedTextColor="@color/white"
                app:toggle_text="S"
                app:toggle_textSize="10sp"/>


        </nl.bryanderidder.themedtogglebuttongroup.ThemedToggleButtonGroup>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/editLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/timePicker"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="90dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="13dp">

        <com.google.android.material.textfield.TextInputEditText
            style="@style/CustomEditText"
            android:id="@+id/alarmEditTxt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Alarm Label"
            android:layout_margin="10dp"
            tools:ignore="HardcodedText" />

    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:backgroundTint="@color/black"
        android:layout_margin="20dp"
        android:text="Cancel"
        tools:ignore="HardcodedText" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnOK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="20dp"
        android:backgroundTint="@color/black"
        android:text="OK"
        tools:ignore="HardcodedText" />


</androidx.constraintlayout.widget.ConstraintLayout>