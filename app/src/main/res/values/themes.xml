<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.Ulysses.2" parent="Theme.Material3.DayNight.NoActionBar" />

    <style name="Theme.Ulysses.NoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar" />

    <style name="NavigationDrawerText" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="UlyssesDatePickerDialog" parent="ThemeOverlay.Material3.MaterialCalendar">

        <item name="colorPrimary">#000000</item>
        <item name="colorOnPrimary">#00BCD4</item>

        <item name="android:backgroundTint">#C7C7C7</item>
        <item name="android:textColorHint">@color/purple_700</item>
        <item name="android:textColor"></item>

        <item name="colorSecondary">#000000</item>
    </style>

    <style name="CustomButton" parent="Widget.Material3.Button">
        <item name="android:background">@drawable/hex_button_background</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CustomEditText" parent="Widget.Material3.TextInputEditText.FilledBox">
        <item name="android:background">@drawable/edittext_outline</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:padding">12dp</item>
    </style>

    <!-- Base application theme. -->
    <style name="Base.Theme.Ulysses" parent="Theme.Material3.DayNight.NoActionBar">
        <color name="primary">#000000</color> <!-- black -->
        <color name="onPrimary">#FFFFFF</color> <!-- white -->

        <item name="android:colorBackground">@color/background_white</item>
            <item name="colorOnBackground">@color/on_background_white</item>

            <!-- Components (cards, buttons, app bars) -->
            <item name="colorSurface">@color/surface_black</item>
            <item name="colorOnSurface">@color/on_surface_black</item>

            <!-- Optional -->
            <item name="colorPrimary">@color/surface_black</item>
            <item name="colorOnPrimary">@color/on_surface_black</item>
            <item name="colorSecondary">@color/surface_black</item>
            <item name="colorOnSecondary">@color/on_surface_black</item>
            <item name="android:fontFamily">@font/roboto</item>
            <item name="editTextStyle">@style/CustomEditText</item>
            <item name="buttonStyle">@style/CustomButton</item>
    </style>


</resources>