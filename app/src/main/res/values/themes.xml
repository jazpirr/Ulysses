<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="NavigationDrawerText" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="CustomButton" parent="Widget.Material3.Button">
        <item name="android:background">@drawable/hex_button_background</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="CustomEditText" parent="Widget.Material3.TextInputEditText.FilledBox">
        <item name="android:background">@drawable/rounded_outline</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">12dp</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="CustomTabLayout" parent="Widget.MaterialComponents.TabLayout">
        <!-- Tab background -->
        <item name="tabBackground">@drawable/tab_select_color</item>

        <!-- Text colors -->
        <item name="tabTextColor">@android:color/black</item>
        <item name="tabSelectedTextColor">@android:color/white</item>

        <!-- Remove default indicator -->
        <item name="tabIndicatorHeight">0dp</item>

        <!-- Tab padding -->
        <item name="tabPaddingStart">16dp</item>
        <item name="tabPaddingEnd">16dp</item>

        <!-- Text appearance -->
        <item name="tabTextAppearance">@style/TabTextAppearance</item>
    </style>

    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@android:color/black</item>
    </style>


    <style name="TextView.Black" parent="android:Widget.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="CustomSearchView" parent="TextAppearance.Material3.SearchView">
        <item name="android:background">@drawable/rounded_outline</item>
    </style>

    <!-- Base application theme. -->
    <style name="Base.Theme.Ulysses" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary colors -->
        <item name="colorPrimary">@color/surface_black</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Background colors -->
        <item name="android:colorBackground">@color/background_white</item>
        <item name="colorOnBackground">@android:color/black</item>

        <!-- Surface (buttons, cards, etc) -->
        <item name="colorSurface">@color/surface_black</item>
        <item name="colorOnSurface">@android:color/white</item>

        <!-- Secondary colors (if used) -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorOnSecondary">@android:color/black</item>

        <!-- Font and default appearance -->
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:textColorSecondary">@android:color/black</item>
        <item name="android:textColorHint">@android:color/darker_gray</item>

        <!-- Widget overrides -->
        <item name="editTextStyle">@style/CustomEditText</item>
        <item name="buttonStyle">@style/CustomButton</item>
        <item name="android:textViewStyle">@style/TextView.Black</item>
    </style>



</resources>